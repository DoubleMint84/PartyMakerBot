<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PartyMakerBot.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
        x:Class="PartyMakerBot.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PartyMakerBot - Queue Manager"
        Width="1200"
        Height="700">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="PartyMakerBot - Queue Manager" 
                   FontSize="20" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>
        <TextBlock Text="{Binding Path=NowPlaying}" 
                   FontSize="15" 
                   TextAlignment="Left" 
                   Margin="0,0,0,10"/>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Path=QueueItems}" 
                          BorderThickness="1" 
                          BorderBrush="Gray" 
                          Height="550">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:QueueItemViewModel">
                        <Border Margin="5,5,5,0"
                                CornerRadius="3"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Padding="5">
                            <Grid ColumnDefinitions="30,2*,*,*,3*,40">
                                <TextBlock Text="{Binding Path=Index}" 
                                           FontSize="13"
                                           Margin="2"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Path=Url}" 
                                           FontSize="13"
                                           Margin="2"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Path=OwnerDisplayName}" 
                                           FontSize="13"
                                           HorizontalAlignment="Center"
                                           Margin="2"/>
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding Path=AddedAt}" 
                                           FontSize="13"
                                           HorizontalAlignment="Center"
                                           Margin="2"/>
                                <TextBlock Grid.Column="4" 
                                           Text="{Binding Path=FilePath}" 
                                           FontSize="13"
                                           Margin="2"/>
                                <Button Grid.Column="5"
                                        Command="{Binding ((vm:MainWindowViewModel)DataContext).RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">Delete</Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Button Content="Update" 
                HorizontalContentAlignment="Center" 
                Command="{Binding RefreshCommand}" 
                Margin="0,10,0,0" 
                Width="100"/>
    </StackPanel>
</Window>
